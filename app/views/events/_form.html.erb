<%= form_for(@event) do |f| %>
  <% if @event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
      <% @event.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </div>
  <div class="field content">
    <%= f.label :content %><br />
    <%= f.text_area :content %>
  </div>
  <div class="field notes">
    <%= f.label :notes %><br />
    <%= f.text_area :notes %>
  </div>
  <div class="field">
    <%= f.label :person %><br />
    <%= f.select(:person_id, Person.all.collect {|p| [p.full_name, p.id]}, {:prompt => 'Select'}) %>
  </div>
  <div class="field">
    <%= f.label :event_date %><br />
    <%= f.date_select :event_date, :start_year => 1800 %>
  </div>
  <div class="field">
    <%= f.label :approximate %><br />
    <%= f.check_box :approximate %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
