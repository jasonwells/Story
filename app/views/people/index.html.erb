<div class="indexlist">
<h1>All People</h1>
<table>
  <tr>
    <th>Name</th>
    <th>Gender</th>
    <th>Birth</th>
    <th>Birth place</th>
    <th>Death</th>
    <th>Death place</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @people.each do |person| %>
  <tr class="<%= cycle('oddrow','evenrow') %>">
    <td><%= link_to person.full_name, person %></td>
    <td><%= person.gender %></td>
    <td><%= person.birth %></td>
    <td><%= person.birth_place %></td>
    <td><%= person.death %></td>
    <td><%= person.death_place %></td>
    <td><%= link_to 'Edit', edit_person_path(person) %></td>
    <td><%= link_to 'Destroy', person, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'Add Person', new_person_path %>
</div>
